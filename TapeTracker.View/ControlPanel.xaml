<Page x:Class="TapeTracker.View.ControlPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TapeTracker.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Control Panel">
    <Grid>
        <Menu ItemsSource="{Binding MenuItems}" Margin="10">
            <Menu.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Image Name="Icon"></Image>
                        <TextBlock Name="Title"></TextBlock>
                        <TextBlock Name="Description"></TextBlock>
                    </Grid>
                </DataTemplate>
            </Menu.ItemTemplate>
        </Menu>
    </Grid>
</Page>
